<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="15dp"
    android:backgroundTint="@color/yellow_light"
    android:background="@drawable/list_item_selector">

    <ImageView
        android:id="@+id/holiday_illustration_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="0dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/holiday_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ItemTitle"
            android:layout_weight="1"
            android:text="Holiday Name"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/holiday_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ItemSubtitle"
            android:layout_weight="1"
            android:text="Holiday Date"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>